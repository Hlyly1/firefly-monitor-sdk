{
  "name": "firefly-monitor-sdk",
  "version": "0.1.0",
  "private": true,
  "description": "前端监控SDK - 轻量级、高性能的前端监控解决方案",
  "scripts": {
    "dev": "pnpm -r --filter \"./packages/**\" run dev",
    "build": "pnpm -r --filter \"./packages/**\" run build",
    "build:core": "pnpm --filter @firefly-monitor/core run build",
    "build:browser": "pnpm --filter @firefly-monitor/browser run build",
    "test": "pnpm -r run test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint packages --ext .ts",
    "lint:fix": "eslint packages --ext .ts --fix",
    "format": "prettier --write \"packages/**/*.ts\"",
    "format:check": "prettier --check \"packages/**/*.ts\"",
    "type-check": "pnpm -r run type-check",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "prepare": "husky install",
    "clean": "pnpm -r run clean && rimraf node_modules",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "commit": "git-cz"
  },
  "keywords": [
    "monitor",
    "frontend",
    "performance",
    "error-tracking",
    "analytics",
    "web-vitals",
    "sdk",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hlyly1/firefly-monitor-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/Hlyly1/firefly-monitor-sdk/issues"
  },
  "homepage": "https://github.com/Hlyly1/firefly-monitor-sdk#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "rollup": "^4.53.5",
    "@rollup/plugin-terser": "^0.4.4",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.4.6",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4"
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
